		"제주특별자치도": "332"
	}

	const barChart = new Chart(ctxBarChart, {
		type: 'bar',
		data: {
		labels: Object.keys(data),
		datasets: [{
			label: '2021년 1월 기준 (단위: 명/km²)',
			data: Object.values(data),
			borderWidth: 1,
			borderRadius: 10
		}]
	},
	options: {
		scales: {
			y: {
			beginAtZero: true
			}
		}
	}
	});
	// barChart 끝

	// lineChart 시작
	const ctxLineChart = document.getElementById('lineChart');

	const temperature = [
    {
      "month": "1월",
