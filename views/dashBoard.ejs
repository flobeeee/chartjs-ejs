	const lineChart = new Chart(ctxLineChart, {
		type: 'line',
		data: {
		labels: temperature.map(el => el.month),
		datasets: [{
			label: '최고 기온',
			data: temperature.map(el => el.avg_high_temp),
			backgroundColor: 'pink',
			borderColor: 'pink',
			pointStyle: 'star',
			pointRadius: 7,
			pointHoverRadius: 15
		}, {
			label: '최저 기온',
			data: temperature.map(el => el.avg_low_temp),
			backgroundColor: 'skyBlue',
			borderColor: 'skyBlue',
			pointStyle: 'cross',
			pointRadius: 7,
			pointHoverRadius: 15
		}]
	},
	options: {
		scales: {
			y: {
			beginAtZero: true
			}
		}
	}
	});

</script>


